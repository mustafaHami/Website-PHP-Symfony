 {# template/boutique.html.twig#}
{% extends "base.html.twig" %}

 {% block title %}
   {% trans %}navbar.boutique{% endtrans %}
{% endblock %}

{% block body %}
    <div class="card col-md-9">
        <div class="card-header">
            <h1><i class="fas fa-store"></i> {% trans %}navbar.boutique{% endtrans %} : {{nbCategories }} {% trans %}rayon.categorie{% endtrans %}</h1>
        </div>
        <div class="card-body row">
        {% for categorie in categories %}
                <div class="col-md-4">
                    <div class="card clickable" onclick="location = '{{ path('rayon',{'idCategorie' : categorie.id}) }}'" >
                    
                        <img src="{{asset(categorie.visuel)}}" class="card-img-top" alt="Fruits">
                        <div class="card-body">
                            <h4 class="card-title">{{ categorie.libelle }}</h4>
                            <p class="card-text"><i>{{ categorie.texte }}</i></p>
                        </div>
                    </div>
                </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
